#include "common.h"
#include "sload.h"

f_deffer 	main	( p_flat I )
{
  f_deffer	O;

  // diffuse
  half3 D	= tex2D		(s_base, I.tcdh);			// IN:  rgb.a

#ifdef	USE_TDETAIL
	D	= 2*D*tex2D	(s_detail, I.tcdbump);
#endif
#ifdef USE_LM_HEMI
	half h  = dot(tex2D(s_hemi, I.lmh).xyz,1.h/3.h);
#else
	half h 	= I.position.w;
#endif

  // 2. Standart output
  O.Ne          = half4		(normalize((half3)I.N.xyz), 			h		);
  O.position    = half4 	(I.position.xyz + O.Ne.xyz*def_virtualh/2.h, 	L_material.w	);
  O.C		= half4		(D.x,	D.y,	D.z,				def_gloss	);	// OUT: rgb.gloss

  return O;
}
