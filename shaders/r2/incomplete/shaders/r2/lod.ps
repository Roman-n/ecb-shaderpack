#include "common.h"
#include "sload.h"

f_deffer 	main	( p_flat I )
{
  f_deffer	O;

  // 1. Base texture + kill pixels with low alpha
  half4 D 	= tex2D		(s_base, I.tcdh);
  clip		(D.w-def_aref)  ;
  half  h 	= I.position.w  ;

  // 2. Standart output
  O.Ne          = half4		(normalize((half3)I.N.xyz)			, h);
  O.position    = half4 	(I.position.xyz + O.Ne.xyz*def_virtualh/2.h	, L_material.w);
  O.C		= half4		(D.x,	D.y,	D.z,	def_gloss);		// OUT: rgb.gloss
  return O;
}
